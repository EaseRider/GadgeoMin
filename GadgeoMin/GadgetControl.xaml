<UserControl x:Class="GadgeoMin.GadgetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GadgeoMin"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FFE5E5E5">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Text="Suchen" />
                <Button x:Name="btnAddGadget" Click="btnAddGadget_Click">
                    <TextBlock Text="Gadget hinzufügen" />
                </Button>
                <Button x:Name="btnEditGadget" Click="btnEditGadget_Click">
                    <TextBlock Text="Gadget bearbeiten" />
                </Button>
            </StackPanel>
            
            <DataGrid ItemsSource="{Binding GadgetList}" />

        </StackPanel>      
    </Grid>

</UserControl>
